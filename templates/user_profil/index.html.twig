{% extends 'base.html.twig' %}

{% block title %}Hello UserProfilController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ app.user.username }}! ✅</h1>

    <h1 class="h3 mb-3 font-weight-normal">Vos préférences !</h1>
    <label for="inputNbMaxElem">Nombre maximum d'éléments afficher en même temps</label>
    <input type="number" value="{{ max_display }}" name="inputNbMaxElem" id="inputNbMaxElem" class="form-control" required autofocus>
    <label for="displayOrder">Ordre</label>
    <input type="string" name="displayOrder" id="displayOrder" class="form-control" value="{{ display_order }}" required>

    <button class="btn btn-lg btn-primary" type="submit">
        Mettre à jour
    </button>

</div>
{% endblock %}
