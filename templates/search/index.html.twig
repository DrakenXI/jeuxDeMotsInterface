{#            <div id="{{ r.id }}" style="display: none;">#}
{#                <h3>Entrée(s) pour la relation {{ r.id }}</h3>#}
{#                #}{# Remplis par ajax #}
{#            </div>#}
{#        {% endfor %}#}
    </section>

</div>
{% endblock %}
